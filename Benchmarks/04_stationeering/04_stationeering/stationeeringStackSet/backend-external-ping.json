{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Stack for a lambda to send a scheduled ping to the external notifications topic.",
    "Resources": {
        "LambdaExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "AllowLambdaToAssume",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "lambda.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "LoggingPolicy",
                        "PolicyDocument": {
                            "Id": "LoggingPolicy",
                            "Statement": [
                                {
                                    "Action": [
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "arn:aws:logs:*:*:*"
                                    ]
                                }
                            ],
                            "Version": "2012-10-17"
                        }
                    },
                    {
                        "PolicyName": "SNSPolicy",
                        "PolicyDocument": {
                            "Id": "SNSPolicy",
                            "Statement": [
                                {
                                    "Action": [
                                        "sns:Publish"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        {
                                            "Fn::ImportValue": "ExternalNotificationArn"
                                        }
                                    ]
                                }
                            ],
                            "Version": "2012-10-17"
                        }
                    }
                ]
            }
        },
        "ExternalPingLambda": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Handler": "index.handler",
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaExecutionRole",
                        "Arn"
                    ]
                },
                "Code": {
                    "S3Bucket": {
                        "Fn::ImportValue": "LambdaBucket"
                    },
                    "S3Key": "external-ping-v01.zip"
                },
                "Runtime": "nodejs8.10",
                "Timeout": "5",
                "Environment": {
                    "Variables": {
                        "TopicArn": {
                            "Fn::ImportValue": "ExternalNotificationArn"
                        }
                    }
                }
            }
        },
        "LambdaLogGroup": {
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "LogGroupName": {
                    "Fn::Sub": [
                        "/aws/lambda/${functionName}",
                        {
                            "functionName": {
                                "Ref": "ExternalPingLambda"
                            }
                        }
                    ]
                },
                "RetentionInDays": 7
            }
        },
        "LambdaSchedule": {
            "Type": "AWS::Events::Rule",
            "Properties": {
                "Description": "ScheduledRule",
                "ScheduleExpression": "cron(0 */4 * * ? *)",
                "State": "ENABLED",
                "Targets": [
                    {
                        "Arn": {
                            "Fn::GetAtt": [
                                "ExternalPingLambda",
                                "Arn"
                            ]
                        },
                        "Id": "TargetFunctionV1"
                    }
                ]
            }
        },
        "LambdaSchedulePermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "FunctionName": {
                    "Ref": "ExternalPingLambda"
                },
                "Action": "lambda:InvokeFunction",
                "Principal": "events.amazonaws.com",
                "SourceArn": {
                    "Fn::GetAtt": [
                        "LambdaSchedule",
                        "Arn"
                    ]
                }
            }
        }
    }
}
